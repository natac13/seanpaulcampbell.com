---
import PageHead from '../components/PageHead.astro'
import { buttonVariants } from '../components/ui/button'
import Layout from '../layouts/Layout.astro'
---

<Layout title="404 - Page Not Found">
  <PageHead title="404 - Page Not Found" />
  <section class="flex flex-col items-center justify-center h-screen gap-4">
    <h1 class="text-4xl font-bold">404 - Page Not Found</h1>
    <p class="text-lg">The page you are looking for does not exist.</p>
    <a href="/" class={buttonVariants({ variant: "default" })}
      >Go back to the home page</a
    >
  </section>
</Layout>
